<!DOCTYPE html>
<html>
  <head>
    <title>KadenReview</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if customer_signed_in? %>
        <p><%= current_customer.account %></p>
      <% end %>
      <% if customer_signed_in? %>
        <li>
          <%= link_to "マイページ" , public_customer_path(current_customer) %>
        </li>
        <li>
          <%= link_to "レビュー検索", public_reviews_path %>
        </li>
        <li>
          <%= link_to "家電検索", public_home_appliances_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
        </li>
      <% elsif admin_signed_in? %>
        <li>
          <%= link_to "会員一覧", admin_customers_path %>
        </li>
        <li>
          <%= link_to "ジャンル一覧", admin_genres_path %>
        </li>
        <li>
          <%= link_to "家電一覧",  admin_home_appliances_path %>
        </li>
        <li>
          <%= link_to "レビュー一覧", admin_reviews_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to "レビュー検索", public_reviews_path %>
        </li>
        <li>
          <%= link_to "新規登録", new_customer_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_customer_session_path %>
        </li>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
