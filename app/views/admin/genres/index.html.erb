<div class="container">
  <h2>ジャンル登録・一覧</h2>

  <div>
    <%= form_with model: @genre, url:  admin_genres_create_path, method: :post do |f| %>
      <table class="table table-borderless">
        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= f.label :name, "ジャンル名" %></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "登録する", class: "btn btn-primary" %></td>
          </tr>
        </tbody>
    </table>
    <% end %>
  </div>

  <div>
    <table class="table table-borderless">
      <% @genres.each do |genre| %>
        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>