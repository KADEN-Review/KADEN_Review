<div class="container">
  <h2>ジャンル編集</h2>

　<%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
    <table class="table table-borderless">
      <thead>
        <tr>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= f.label :genre, "ジャンル名" %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "保存する", class: "btn btn-success" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>