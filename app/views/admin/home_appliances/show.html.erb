<div class="container px-5 px-sm-0">
  <h1><%= @home_appliance.model_number %>詳細</h1>

  <table class="table table-borderless">
    <thead>
      <tr>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <% if @home_appliance.image.attached? %>
            <%= image_tag @home_appliance.image, size: "300x300" %>
          <% else %>
            <%= image_tag 'no_image.jpg', size: "300×300" %>
          <% end %>
        </td>
        <td>カテゴリー</td>
        <td><%= @home_appliance.genre.name %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= link_to "編集", edit_admin_home_appliance_path(@home_appliance.id), class: "btn btn-success" %></td>
      </tr>
    </tbody>
  </table>
</div>