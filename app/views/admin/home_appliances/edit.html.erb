<div class="container px-5 px-sm-0">
  <p><%= @home_appliance.model_number %>編集</p>

  <table class="table table-borderless">
    <%= form_with model: @home_appliance, url: admin_home_appliance_update_path(@home_appliance.id), method: :patch do |f| %>
    <thead>
      <tr>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= f.label :model_number, "型番" %></td>
        <td><%= f.text_field :model_number %></td>
      </tr>
      <tr>
        <td><%= f.label :genre , "カテゴリー" %></td>
        <td><%= f.collection_select :genre_id, @genre, :id, :name %></td>
      </tr>
      <tr>
        <td></td>
        <td>
          <%= f.submit "保存する", class: "btn btn-success" %>
          <%= link_to "詳細画面へ戻る", admin_home_appliance_path(@home_appliance.id), class: "btn btn-info" %>
          <%= link_to "削除する", admin_home_appliance_destroy_path(@home_appliance.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>