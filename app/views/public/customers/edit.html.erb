<div class="container"></br>
  <h2>会員情報変更</h2>
  <%= form_with model: @customer, url: public_customer_path(current_customer.id), method: :patch do |f| %>
  <table class="table table-borderless">
    <thead>
      <tr>
        <th>アカウント名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= f.text_field :account %></td>
        <td>
          <%= f.submit "保存する", class: "btn btn-success" %>
          <%= link_to "登録削除", public_unsubscribe_path(current_customer), class: "btn btn-danger" %>
        </td>
      </tr>
    </tbody>
  </table>
  <% end %>
</div>