<div class="container"></br>

  <h1><%= @customer.account %></h1>
  <div>
    <% if current_customer.id == @customer.id %>
      <%= link_to "アカウント名変更", edit_public_customer_path(current_customer.id), class: "btn btn-success" %>
    <% end %>
  </div>

  <h4>投稿レビュー一覧</h4>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>投稿日時</th>
        <th>型番</th>
        <th>レビュータイトル</th>
        <th>評価</th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
      <tr>
        <td>
          <% if review.image.attached? %>
            <%= image_tag review.image, size: "100×100" %>
          <% else %>
            <%= image_tag 'no_image.jpg', size: "100×100" %>
          <% end %>
        </td>
        <td><%= review.created_at %></td>
        <td><%= review.home_appliance.model_number %></td>
        <td>
          <%= link_to public_review_path(review.id) do %>
            <%= review.review_title %>
          <% end %>
        </td>
        <td><%= review.score %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>
