<div>
  <h1>家電レビュー検索</h1>
  <% @reviews.each do |review| %>
    <div>
      <% if review.image.attached? %>
        <%= image_tag review.image, size: "100×100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100×100" %>
      <% end %>
    </div>
    <div>
      <%= link_to public_review_path(review.id) do %>
        <%= review.home_appliance.model_number %>
      <% end %>
    </div>
    <div>
      <%#= review.genre.name %>
    </div>

  <% end %>
</div>