<div>
  <h1>レビュー詳細</h1>
  <div>
    <% if @review.image.attached? %>
      <%= image_tag @review.image, size: "200×200" %>
    <% else %>
      <%= image_tag 'no_image', size: "200×200" %>
    <% end %>
    <%= @review.home_appliance.model_number %>
    <%= @review.genre.name %>
  </div>
  <div>
    <%= @review.review_contents %>
  </div>
  <div>
    <%= link_to "コメントをする", new_public_comment_path(review.id) %>
    <% if not @reviews.empty? %>
      <%= link_to "削除", review_destroy_path(review.id) %>
    <% end %>
  </div>
</div>